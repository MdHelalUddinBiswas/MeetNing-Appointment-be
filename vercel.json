{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/ping", "dest": "/api/ping.js" },
    { "src": "/api", "dest": "/api/index.js" },
    { "src": "/", "dest": "/api/index.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}